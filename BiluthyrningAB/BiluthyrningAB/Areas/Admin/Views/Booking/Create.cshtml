@model BiluthyrningAB.Models.ViewModels.BookingViewModel

@{
    ViewData["Title"] = "Create";
}

<br />
<h1>Skapa ny bokning</h1>
<br />

<form method="post" asp-action="Create">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Booking.Customer" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="Booking.CustomerId" asp-items="Model.Customer" class="form-control">
                    <option disabled selected>--- VÄLJ KUND ---</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Booking.Car" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="Booking.CarId" asp-items="Model.Car" class="form-control">
                    <option disabled selected>--- VÄLJ BIL ---</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Booking.BookingTime" class="control-label"></label>
            <input asp-for="Booking.BookingTime" class="form-control" />
            <span asp-validation-for="Booking.BookingTime" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>