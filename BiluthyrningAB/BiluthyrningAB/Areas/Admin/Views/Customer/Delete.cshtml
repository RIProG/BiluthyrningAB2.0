@model Customer
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Radera kund</h1>

<form method="post" asp-action="Delete">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SocialSecurityNumber" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="SocialSecurityNumber" readonly class="form-control" />
            </div>
            <span asp-validation-for="SocialSecurityNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FirstName" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="FirstName" readonly class="form-control" />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LastName" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="LastName" readonly class="form-control" />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToListButton" />
            </div>
        </div>
    </div>
</form>

