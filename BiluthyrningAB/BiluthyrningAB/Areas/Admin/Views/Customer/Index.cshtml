@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Kundregister</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.SocialSecurityNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.LastName)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(m => item.SocialSecurityNumber)</td>
                    <td>@Html.DisplayFor(m => item.FirstName)</td>
                    <td>@Html.DisplayFor(m => item.LastName)</td>
                    <td>
                        <partial name="_TableButtonPartial" model="item.Id" />
                    </td>
                </tr>
                }
            </table>
        }
        else
        {
            <p> Det finns inga kunder i databasen...</p>
        }
    </div>
</div>