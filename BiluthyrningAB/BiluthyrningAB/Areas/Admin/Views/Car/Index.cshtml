@model IEnumerable<Car>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Alla Bilar</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.RegNr)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.CarSize)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.DistanceInKm)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(m => item.RegNr)</td>
                    <td>@Html.DisplayFor(m => item.CarSize)</td>
                    <td>@Html.DisplayFor(m => item.DistanceInKm)</td>
                    <td>
                        <partial name="_TableButtonPartial" model="item.Id" />
                    </td>
                </tr>
                }
            </table>
        }
        else
        {
            <p> Det finns inga bilar i databasen...</p>
        }
    </div>
</div>