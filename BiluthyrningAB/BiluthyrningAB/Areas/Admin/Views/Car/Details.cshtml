@model BiluthyrningAB.Models.Car

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Detaljer för bil</h2>
<br />

<div class="border backgroundWhite">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="RegNr" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="RegNr" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="DistanceInKm" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="DistanceInKm" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="CarSize" readonly class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="CarSize" readonly class="form-control"/>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_DetailsAndBackToListButton" model="Model.Id" />
        </div>
    </div>
</div>
