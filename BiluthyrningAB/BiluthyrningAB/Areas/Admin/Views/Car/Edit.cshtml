@model BiluthyrningAB.ViewModels.CarViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Ändra bil</h2>
<br />

<form asp-action="Edit">
    <div class="border backgroundWhite">
        <input type="hidden" asp-for="Car.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.RegNr" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.RegNr" class="form-control" />
            </div>
            <span asp-validation-for="Car.RegNr" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.DistanceInKm" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.DistanceInKm" class="form-control" />
            </div>
            <span asp-validation-for="Car.DistanceInKm" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.CarSize" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="Car.CarSize" asp-items="Html.GetEnumSelectList<CarSize>()"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_EditAndBackToListButton" model="Model.Car.Id" />
            </div>
        </div>
    </div>
</form>