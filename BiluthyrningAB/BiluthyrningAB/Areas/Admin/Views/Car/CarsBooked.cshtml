@model IEnumerable<BiluthyrningAB.Models.Car>
@{
    ViewData["Title"] = "CarsBooked";
}

<br /><br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info"> Bokade bilar</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.RegNr)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.CarSize)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    @if (item.Available == false)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.RegNr)</td>
                            <td>@Html.DisplayFor(m => item.CarSize)</td>
                            <td>
                                <partial name="_TableButtonPartial" model="item.Id" />
                            </td>
                        </tr>
                    }
                }
            </table>
        }
        else
        {
            <p> Det finns för närvarande inte bokade bilar.</p>
        }
    </div>
</div>